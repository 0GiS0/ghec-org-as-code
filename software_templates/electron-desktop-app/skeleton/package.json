{
  "name": "${{values.name}}",
  "version": "0.1.0",
  "description": "${{values.description}}",
  "main": "./dist/main.js",
  "preload": "./dist/preload.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && npm run start\"",
    "build": "vite build && tsc -p tsconfig.json && esbuild src/main.ts src/preload.ts --bundle --platform=node --external:electron --outdir=dist",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^25.1.0",
    "electron-is-dev": "^3.0.1",
    "esbuild": "^0.24.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.${{values.name}}",
    "productName": "${{values.name}}",
    "files": [
      "dist/**/*",
      "dist-vite/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
