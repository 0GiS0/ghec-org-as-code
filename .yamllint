---
extends: default

rules:
  line-length:
    max: 80
    level: error
  document-start:
    present: true
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']

ignore: |
  # Ignore files with complex templating syntax that yamllint cannot parse
  templates/catalog-info.yaml.tpl
  templates/skeletons/helm-base/templates/deployment.yaml.tpl
  templates/skeletons/helm-base/templates/_helpers.tpl.tpl